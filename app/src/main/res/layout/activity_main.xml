<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jetslice.referncert.MainActivity">

    <Button
        android:id="@+id/recent_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RecentBook"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toTopOf="@+id/open_lib"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.501"/>

    <Button
        android:id="@+id/open_lib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Ncert Books"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="185dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.502"/>

    <Button
        android:id="@+id/sett"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/recent_book"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/prefdet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="431dp"/>
</android.support.constraint.ConstraintLayout>
